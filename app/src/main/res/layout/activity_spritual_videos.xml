<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.quotesapp.rajat.myplaystoreapp.SpritualVideosActivity"
    android:background="#BBDEFB">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Youtube Channels"
            android:layout_marginTop="45dp"
            android:id="@+id/textView7"
            android:layout_centerHorizontal="true" />
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView3"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">




            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textView7"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/book1"
                    android:textColor="#125688"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/textView7"
                    android:layout_alignParentStart="true"
                    android:text="Sadhguru"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="https://www.youtube.com/user/sadhguru"
                    android:textColorLink="#125688"
                    android:autoLink="web"
                    android:id="@+id/link1"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/book1"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/book2"
                    android:textColor="#125688"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/link1"
                    android:layout_alignParentStart="true"
                    android:text="Sandeep Maheshwari" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="https://www.youtube.com/user/SandeepSeminars"
                    android:textColorLink="#125688"
                    android:autoLink="web"
                    android:id="@+id/link2"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/book2"
                    android:layout_alignParentStart="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#125688"
                    android:id="@+id/book3"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/link2"
                    android:layout_alignParentStart="true"
                    android:text="Sandeep Maheshwari Spirituality " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="https://www.youtube.com/channel/UCaEtAfisWDXL3eG8u_M2brA"
                    android:textColorLink="#125688"
                    android:autoLink="web"
                    android:id="@+id/link3"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/book3"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/book4"
                    android:textColor="#125688"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/link3"
                    android:layout_alignParentStart="true"
                    android:text="Eckhart Tolle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="https://www.youtube.com/user/EckhartTeachings"
                    android:textColorLink="#125688"
                    android:autoLink="web"
                    android:id="@+id/link4"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/book4"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/book5"
                    android:textColor="#125688"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/link4"
                    android:layout_alignParentStart="true"
                    android:text="Vivekananda Samiti" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="https://www.youtube.com/user/vsiitk"
                    android:textColorLink="#125688"
                    android:autoLink="web"
                    android:id="@+id/link5"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/book5"
                    android:layout_alignParentStart="true" />





            </LinearLayout>
        </ScrollView>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
